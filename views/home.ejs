<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>My Blog</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="container">
    <header>
      <h1>My Blog</h1>
      <a href="/compose" class="compose-btn">+ New Post</a>
    </header>

    <% if (posts.length === 0) { %>
      <p class="empty">No blog posts yet. Click "New Post" to create one.</p>
    <% } %>

    <% posts.forEach(post => { %>
      <div class="post-card">
        <h2><%= post.title %></h2>
        <p><%= post.content.substring(0, 100) %>...</p>
        <a href="/posts/<%= post.title %>" class="readmore">Read More</a>
      </div>
    <% }); %>
  </div>

<footer>
  <p>Copyright Â© <%= new Date().getFullYear() %></p>
</footer>


</body>
</html>
